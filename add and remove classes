const description = document.querySelector('.description');

#add Class - Adds a class to an element’s list of classes. If class already exists in the element’s list of classes, it will not add the class again.
description.classList.add("moreless");

#add Class multiple
description.classList.add("moreless", "newclassName");

#remove class – Removes a class from an element’s list of classes. If class does not exist in the element’s list of classes, it will not throw an error or exception.
description.classList.remove("moreless");

#toggle - If my-class is set remove it, otherwise add it
description.classList.toggle("moreless");

#contains – Checks if an element’s list of classes contains a specific class
if (el.classList.contains("my-class")) {
    // Has my-class in it
} else {
    // No my-class :(
}
